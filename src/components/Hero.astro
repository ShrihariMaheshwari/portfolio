---
// src/components/sections/Hero.astro
import AnimateIn from './animations/AnimateIn';

const technologies = [
  { name: "TypeScript", color: "text-blue-500 dark:text-blue-400" },
  { name: "React", color: "text-cyan-500 dark:text-cyan-400" },
  { name: "Nest.js", color: "text-green-500 dark:text-green-400" },
  { name: "Python", color: "text-yellow-500 dark:text-yellow-400" },
  { name: "AWS", color: "text-orange-500 dark:text-orange-400" }
];
---

<section id="home" class="min-h-screen flex items-center justify-center relative bg-white dark:bg-[#0B1120] transition-colors duration-300">
  <div class="container mx-auto px-4 max-w-6xl relative z-10">
    <div class="text-center">
      <AnimateIn client:load animation="fadeIn">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-100/50 dark:bg-blue-900/30 
                     text-blue-600 dark:text-blue-400 text-sm font-medium mb-6
                     border border-blue-200/50 dark:border-blue-700/50">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
          </span>
          Open to Work
        </span>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.1}>
        <h1 class="text-[2.75rem] sm:text-4.5xl md:text-6xl font-bold mb-6 text-gray-900 dark:text-white flex flex-col sm:block leading-tight">
          <span class="sm:inline sm:mb-0">Hi, I'm</span>
          <span class="text-blue-600 dark:text-blue-400 sm:ml-2">Shrihari</span>
        </h1>
      </AnimateIn>
      
      <AnimateIn client:load animation="slideUp" delay={0.2}>
        <h2 class="text-[1.65rem] md:text-3xl text-gray-700 dark:text-gray-200 mb-6">
          <span class="hidden sm:inline">Software Engineer specializing in</span>
          <span class="text-gray-900 dark:text-white font-semibold">
            <span class="sm:hidden block leading-tight mb-1">Full Stack &</span>
            <span class="sm:hidden block leading-tight">Cloud Developer</span>
            <span class="hidden sm:inline"> Full Stack & Cloud Development</span>
          </span>
        </h2>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.3}>
        <p class="text-gray-600 dark:text-gray-300 mb-8 text-lg max-w-2xl mx-auto hidden sm:block">
          Building scalable applications with intuitive, user-friendly designs
        </p>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.4}>
        <div class="flex justify-center gap-3 mb-10">
          <a href="#contact" 
             class="group relative inline-flex items-center justify-center px-4 py-2 sm:px-8 sm:py-4
                    bg-blue-500 hover:bg-blue-600
                    text-white rounded-lg text-sm font-medium
                    transition-all duration-300">
            <span class="flex items-center gap-1.5">
              Let's Connect
              <svg class="h-3.5 w-3.5 sm:h-4 sm:w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </span>
          </a>
          
          <a href="#projects"
             class="group relative inline-flex items-center justify-center px-4 py-2 sm:px-8 sm:py-4
                    text-gray-900 dark:text-white rounded-lg text-sm font-medium
                    border border-gray-300 dark:border-gray-700
                    hover:border-blue-500 dark:hover:border-blue-400
                    transition-all duration-300">
            <span class="flex items-center gap-1.5">
              Projects
              <svg class="h-3.5 w-3.5 sm:h-4 sm:w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        </div>
      </AnimateIn>
      <AnimateIn client:load animation="slideUp" delay={0.5}>
        <div class="max-w-3xl mx-auto">
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            Tech Stack
          </p>
          <div class="flex flex-wrap justify-center items-center gap-3">
            {technologies.map((tech) => (
              <span class={`px-4 py-2 rounded-lg bg-gray-50 dark:bg-[#1a2333]/50 
                           ${tech.color} font-medium text-sm
                           border border-gray-200/50 dark:border-gray-700/50
                           transform hover:-translate-y-1 transition-all duration-300 
                           hover:border-blue-500/50 dark:hover:border-blue-400/50
                           hover:shadow-md cursor-default`}>
                {tech.name}
              </span>
            ))}
          </div>
        </div>
      </AnimateIn>
    </div>
  </div>
</section>

<style>
  .gradient-text {
    @apply text-transparent bg-clip-text;
    @apply bg-gradient-to-r from-blue-700 to-blue-500; /* Light theme - darker gradient */
  }

  :global(.dark) .gradient-text {
    background-image: linear-gradient(to right, #3B82F6, #60A5FA); /* Adjusted to be slightly darker */
  }
</style>