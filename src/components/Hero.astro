---
// src/components/sections/Hero.astro
import AnimateIn from './animations/AnimateIn';

const technologies = [
  { name: "TypeScript", color: "text-blue-600 dark:text-blue-400" },
  { name: "React", color: "text-cyan-600 dark:text-cyan-400" },
  { name: "Nest.js", color: "text-green-600 dark:text-green-400" },
  { name: "Python", color: "text-yellow-600 dark:text-yellow-400" },
  { name: "AWS", color: "text-orange-600 dark:text-orange-400" }
];
---

<section id="home" class="min-h-screen flex items-center justify-center relative bg-white dark:bg-gray-900">
  <div class="absolute inset-0 bg-gradient-to-b from-blue-50/20 to-transparent dark:from-blue-900/10 dark:to-transparent"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center">
      <AnimateIn client:load animation="fadeIn">
        <span class="inline-block px-4 py-2 rounded-full bg-blue-100 dark:bg-blue-900/30 
                     text-blue-600 dark:text-blue-400 text-sm font-medium mb-6">
          Open to Work
        </span>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.1}>
        <h1 class="text-4.5xl md:text-6xl font-bold mb-6 text-gray-900 dark:text-white">
          Hi, I'm <span class="text-blue-600 dark:text-blue-400">Shrihari</span>
        </h1>
      </AnimateIn>
      
      <AnimateIn client:load animation="slideUp" delay={0.2}>
        <h2 class="text-2xl md:text-3xl text-gray-700 dark:text-gray-200 mb-6">
          Software Engineer specializing in 
          <span class="text-gray-900 dark:text-white font-semibold"> Full Stack Development</span>
        </h2>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.3}>
        <p class="text-gray-600 dark:text-gray-300 mb-8 text-lg max-w-2xl mx-auto">
          Building scalable applications and solving complex problems with clean, efficient code
        </p>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.4}>
        <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
          <a href="#contact" 
             class="px-8 py-3 bg-blue-600 text-white rounded-lg hover:-translate-y-1 
                    transition-all duration-300 hover:bg-blue-700 hover:shadow-lg">
            Let's Collaborate
          </a>
          <a href="#projects"
             class="px-8 py-3 border border-gray-300 dark:border-gray-700 text-gray-900 
                    dark:text-white rounded-lg hover:border-blue-600 dark:hover:border-blue-400 
                    hover:-translate-y-1 transition-all duration-300 hover:shadow-lg">
            View Projects
          </a>
        </div>
      </AnimateIn>

      {/* Tech Stack Section */}
      <AnimateIn client:load animation="slideUp" delay={0.5}>
        <div class="max-w-3xl mx-auto">
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            Tech Stack
          </p>
          <div class="flex flex-wrap justify-center items-center gap-3">
            {technologies.map((tech) => (
              <span class={`px-4 py-2 rounded-full bg-gray-100 dark:bg-gray-800 
                           ${tech.color} font-medium text-sm
                           transform hover:-translate-y-1 transition-all duration-300 
                           hover:shadow-md cursor-default`}>
                {tech.name}
              </span>
            ))}
          </div>
        </div>
      </AnimateIn>
    </div>
  </div>

  {/* Optional: Decorative dots/grid pattern */}
  <div class="absolute inset-0 bg-grid-gray-900/[0.02] dark:bg-grid-gray-100/[0.02] pointer-events-none"></div>
</section>

<style>
  /* Grid background pattern */
  .bg-grid-gray-900 {
    mask-image: linear-gradient(to bottom, transparent, black);
    background-image: 
      linear-gradient(to right, rgb(17 24 39 / 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgb(17 24 39 / 0.1) 1px, transparent 1px);
    background-size: 4rem 4rem;
  }

  .bg-grid-gray-100 {
    mask-image: linear-gradient(to bottom, transparent, black);
    background-image: 
      linear-gradient(to right, rgb(243 244 246 / 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgb(243 244 246 / 0.1) 1px, transparent 1px);
    background-size: 4rem 4rem;
  }
</style>