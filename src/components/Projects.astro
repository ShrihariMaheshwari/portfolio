---
import { ProjectCard } from './ProjectCard';
import ProjectCardWrapper from './ProjectCardWrapper';
import AnimateIn from './animations/AnimateIn';

const projects = [
  {
    title: "DALL.E Clone",
    description: "DALL-E clone: A web app using OpenAI API to generate images from prompts.",
    image: "/dalle.png",
    tags: ["React.js", "Cloudinary", "MongoDB"],
    link: "https://dall-e-ai.vercel.app/",
    github: "https://github.com/ShrihariMaheshwari/dall-e-ai"
  },
  {
    title: "Hokie Event Sphere",
    description: "Virginia Tech students personalized event finder.",
    image: "/event.png",
    tags: ["React.js", "Express", "MongoDB"],
    link: "https://hokie-event-sphere.vercel.app/",
    github: "https://github.com/ShrihariMaheshwari/HokieEventSphere"
  },
  {
    title: "Article Summarizer",
    description: "Open-source tool for summarizing lengthy articles into clear, concise summaries.",
    image: "/sumz.png",
    tags: ["React.js", "RapidApi", "Redux"],
    link: "https://sumzzzz.netlify.app/",
    github: "https://github.com/ShrihariMaheshwari/Summarizer"
  }
];
---

<section 
  id="projects"
  class="py-24 bg-white dark:bg-[#0B1120] transition-colors duration-300"
>
  <div class="container mx-auto px-4 max-w-6xl">
    <AnimateIn client:load animation="fadeIn">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Featured Projects
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Explore some of my recent work and personal projects
        </p>
      </div>
    </AnimateIn>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <ProjectCardWrapper client:load project={project} index={index} />
      ))}
    </div>
  </div>
</section>