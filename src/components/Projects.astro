---
import { ProjectCard } from './ProjectCard';
import ProjectCardWrapper from './ProjectCardWrapper';
import AnimateIn from './animations/AnimateIn';

const projects = [
  {
    title: "Project One",
    description: "A full-stack web application built with modern technologies.",
    image: "/project1.jpg",
    tags: ["React", "Node.js", "MongoDB"],
    link: "#",
    github: "#"
  },
  {
    title: "Project Two",
    description: "Real-time chat application with video calling capabilities.",
    image: "/project2.jpg",
    tags: ["Next.js", "Socket.io", "WebRTC"],
    link: "#",
    github: "#"
  },
  {
    title: "Project Three",
    description: "AI-powered content management system.",
    image: "/project3.jpg",
    tags: ["Python", "TensorFlow", "AWS"],
    link: "#",
    github: "#"
  }
];
---

<section 
  id="projects"
  class="py-24 bg-white dark:bg-[#0B1120] transition-colors duration-300"
>
  <div class="container mx-auto px-4 max-w-6xl">
    <AnimateIn client:load animation="fadeIn">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
          Featured Projects
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Explore some of my recent work and personal projects
        </p>
      </div>
    </AnimateIn>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <ProjectCardWrapper client:load project={project} index={index} />
      ))}
    </div>
  </div>
</section>